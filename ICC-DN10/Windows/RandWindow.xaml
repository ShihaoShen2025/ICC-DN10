<Window
    x:Class="ICC_DN10.RandWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:ICC_DN10"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="InkCanvasForClass .NET 10 Edition 抽奖"
    Width="900"
    Height="500"
    ui:ThemeManager.RequestedTheme="Light"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Microsoft YaHei UI"
    Loaded="Window_Loaded"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Margin="0"
        Background="#F0F3F9"
        BorderBrush="#0066BF"
        BorderThickness="1"
        ClipToBounds="True"
        CornerRadius="10">
        <Canvas>
            <Image
                Canvas.Left="-48"
                Canvas.Top="304"
                Canvas.Bottom="-140"
                Width="300"
                Source="/Resources/hatsune-miku1.png" />
            <Grid
                Canvas.Left="0"
                Canvas.Top="0"
                Canvas.Right="0"
                Canvas.Bottom="0"
                Width="900"
                Height="309"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.8*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Viewbox Margin="20,0" HorizontalAlignment="Center">
                    <ikw:SimpleStackPanel
                        MinHeight="470"
                        Orientation="Horizontal"
                        Spacing="50">
                        <Label
                            Name="LabelOutput"
                            Content=""
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Block.TextAlignment="Center"
                            FontSize="130" />
                        <Label
                            Name="LabelOutput2"
                            Content=""
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Block.TextAlignment="Center"
                            FontSize="130"
                            Visibility="Collapsed" />
                        <Label
                            Name="LabelOutput3"
                            Content=""
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Block.TextAlignment="Center"
                            FontSize="130"
                            Visibility="Collapsed" />
                    </ikw:SimpleStackPanel>
                </Viewbox>
                <ikw:SimpleStackPanel
                    Name="PeopleControlPane"
                    Grid.Column="1"
                    Width="256"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Opacity="1"
                    Spacing="8">
                    <StackPanel Orientation="Horizontal">
                        <Border
                            x:Name="BorderBtnMinus"
                            Width="70"
                            Height="70"
                            Background="#FBFBFD"
                            CornerRadius="100"
                            MouseUp="BorderBtnMinus_MouseUp">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Direction="0"
                                    Opacity="0.15"
                                    ShadowDepth="0" />
                            </Border.Effect>
                            <Viewbox Margin="20">
                                <Image Width="18" Height="18">
                                    <Image.Source>
                                        <DrawingImage>
                                            <DrawingImage.Drawing>
                                                <DrawingGroup ClipGeometry="M0,0 V24 H24 V0 H0 Z">
                                                    <DrawingGroup Opacity="1">
                                                        <DrawingGroup.ClipGeometry>
                                                            <RectangleGeometry
                                                                RadiusX="0"
                                                                RadiusY="0"
                                                                Rect="0,0,24,24" />
                                                        </DrawingGroup.ClipGeometry>
                                                        <GeometryDrawing Brush="#FF000000" Geometry="F0 M24,24z M0,0z M4,12C4,11.4477,4.44772,11,5,11L19,11C19.5523,11 20,11.4477 20,12 20,12.5523 19.5523,13 19,13L5,13C4.44772,13,4,12.5523,4,12z" />
                                                    </DrawingGroup>
                                                </DrawingGroup>
                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Image.Source>
                                </Image>
                            </Viewbox>
                        </Border>
                        <TextBlock
                            Name="LabelNumberCount"
                            Width="80"
                            Margin="10"
                            FontFamily="Consolas"
                            FontSize="55"
                            Text="1"
                            TextAlignment="Center" />
                        <Border
                            x:Name="BorderBtnAdd"
                            Width="70"
                            Height="70"
                            Background="#FBFBFD"
                            CornerRadius="100"
                            MouseUp="BorderBtnAdd_MouseUp">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Direction="0"
                                    Opacity="0.15"
                                    ShadowDepth="0" />
                            </Border.Effect>
                            <Viewbox Margin="20">
                                <Image Width="18" Height="18">
                                    <Image.Source>
                                        <DrawingImage>
                                            <DrawingImage.Drawing>
                                                <DrawingGroup ClipGeometry="M0,0 V24 H24 V0 H0 Z">
                                                    <DrawingGroup Opacity="1">
                                                        <DrawingGroup.ClipGeometry>
                                                            <RectangleGeometry
                                                                RadiusX="0"
                                                                RadiusY="0"
                                                                Rect="0,0,24,24" />
                                                        </DrawingGroup.ClipGeometry>
                                                        <GeometryDrawing Brush="#18181b" Geometry="F0 M24,24z M0,0z M13,5C13,4.44772 12.5523,4 12,4 11.4477,4 11,4.44772 11,5L11,11 5,11C4.44772,11 4,11.4477 4,12 4,12.5523 4.44772,13 5,13L11,13 11,19C11,19.5523 11.4477,20 12,20 12.5523,20 13,19.5523 13,19L13,13 19,13C19.5523,13 20,12.5523 20,12 20,11.4477 19.5523,11 19,11L13,11 13,5z" />
                                                    </DrawingGroup>
                                                </DrawingGroup>
                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Image.Source>
                                </Image>
                            </Viewbox>
                        </Border>
                    </StackPanel>
                    <ikw:SimpleStackPanel
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="24"
                        Visibility="Collapsed">
                        <CheckBox
                            x:Name="NoHotStudents"
                            Content="不抽热门人选"
                            MinWidth="0"
                            HorizontalAlignment="Center"
                            IsThreeState="True" />
                        <CheckBox
                            x:Name="NoShengPiZi"
                            Content="避开生僻字"
                            MinWidth="0"
                            HorizontalAlignment="Center"
                            IsThreeState="True" />
                    </ikw:SimpleStackPanel>
                    <ikw:SimpleStackPanel
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="24">
                        <CheckBox
                            x:Name="CheckBoxNotRepeatName"
                            Content="本次不再抽取已抽过的人"
                            IsChecked="False" />
                    </ikw:SimpleStackPanel>
                    <ikw:SimpleStackPanel
                        Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="24"
                        Visibility="Collapsed">
                        <ComboBox
                            Name="ComboBoxRandMode"
                            MinWidth="0"
                            IsEditable="False"
                            IsReadOnly="True"
                            SelectedIndex="0">
                            <ComboBoxItem>全都抽</ComboBoxItem>
                            <ComboBoxItem>只抽男</ComboBoxItem>
                            <ComboBoxItem>只抽女</ComboBoxItem>
                        </ComboBox>
                    </ikw:SimpleStackPanel>
                    <Border
                        x:Name="BorderBtnRand"
                        Width="200"
                        Height="70"
                        Background="#0066BF"
                        CornerRadius="35"
                        MouseUp="BorderBtnRand_MouseUp">
                        <ikw:SimpleStackPanel
                            Margin="3,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="20">
                            <Viewbox Margin="0,20">
                                <ui:SymbolIcon
                                    Name="SymbolIconStart"
                                    Foreground="White"
                                    Symbol="Contact" />
                            </Viewbox>
                            <TextBlock
                                Margin="-1,-1,4,0"
                                VerticalAlignment="Center"
                                FontSize="32"
                                Foreground="White"
                                Text="开抽" />
                        </ikw:SimpleStackPanel>
                    </Border>
                </ikw:SimpleStackPanel>
            </Grid>
            <Border
                x:Name="BorderBtnHelp"
                Grid.Column="1"
                Canvas.Right="8"
                Canvas.Bottom="8"
                Height="40"
                Margin="10,10,60,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="#FBFBFD"
                CornerRadius="20"
                MouseUp="BorderBtnHelp_MouseUp"
                UseLayoutRounding="True">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        Opacity="0.15"
                        ShadowDepth="0" />
                </Border.Effect>
                <ikw:SimpleStackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Viewbox Margin="15,12">
                        <ui:SymbolIcon Foreground="Black" Symbol="People" />
                    </Viewbox>
                    <TextBlock
                        Name="TextBlockPeopleCount"
                        Margin="-5,12,15,12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="点击此处以导入名单" />
                </ikw:SimpleStackPanel>
            </Border>
            <Border
                x:Name="BtnClose"
                Grid.Column="1"
                Canvas.Right="8"
                Canvas.Bottom="8"
                Width="40"
                Height="40"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="{Binding ElementName=BorderBtnHelp, Path=VerticalAlignment}"
                Background="#E32A34"
                CornerRadius="100"
                MouseUp="BtnClose_MouseUp"
                UseLayoutRounding="True">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        Opacity="0.1"
                        ShadowDepth="0" />
                </Border.Effect>
                <Viewbox Margin="14">
                    <ui:SymbolIcon Foreground="White" Symbol="Clear" />
                </Viewbox>
            </Border>
        </Canvas>

    </Border>
</Window>
