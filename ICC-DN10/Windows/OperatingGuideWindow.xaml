<Window
    x:Class="ICC_DN10.OperatingGuideWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:ICC_DN10"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="InkCanvasForClass-Remastered 使用指南"
    Width="500"
    Height="600"
    ui:ThemeManager.RequestedTheme="Light"
    AllowsTransparency="True"
    Background="Transparent"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Margin="10,10,10,50"
        Background="#F0F3F9"
        BorderBrush="#0066BF"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Border
                Width="64"
                Height="15"
                Margin="0,0,0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="Gray"
                CornerRadius="8"
                MouseMove="WindowDragMove"
                Visibility="Visible" />
            <ScrollViewer
                Margin="0,0,0,30"
                ui:ThemeManager.RequestedTheme="Light"
                ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback"
                PanningMode="VerticalOnly"
                VerticalScrollBarVisibility="Auto">
                <ikw:SimpleStackPanel>
                    <ikw:SimpleStackPanel
                        Margin="20,20,20,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Image
                            Width="40"
                            Height="40"
                            Margin="5,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Resources/Icons-Fluent/ic_fluent_keyboard_24_regular.png" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="22"
                            Text="软件快捷键"
                            TextWrapping="Wrap" />
                    </ikw:SimpleStackPanel>

                    <Viewbox Height="320" HorizontalAlignment="Left">
                        <ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="20"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="/Resources/Icons-Fluent/ic_fluent_control_button_24_regular.png" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" + Z  ——  撤销"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="20"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="/Resources/Icons-Fluent/ic_fluent_control_button_24_regular.png" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" + Y  ——  重做"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="20"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="/Resources/Icons-Fluent/ic_fluent_control_button_24_regular.png" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" + E  ——  清屏"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + V  ——  显示/隐藏笑脸右侧工具栏（Visibility）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + C  ——  截屏（Capture）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + S  ——  切换至选择模式（Select）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + D  ——  切换至批注模式 / 墨迹颜色选择器（Draw）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + Q  ——  退出批注模式（Quit）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + B  ——  切换/退出画板模式（Board）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + E  ——  切换至面积擦/墨迹擦功能（Eraser）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text=" Alt  + L  ——  切换至单次直线绘制功能（Line）"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                            <ikw:SimpleStackPanel
                                Height="20"
                                Margin="20,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text="Shift + Esc  ——  退出 PPT 放映"
                                    TextWrapping="Wrap" />
                            </ikw:SimpleStackPanel>
                        </ikw:SimpleStackPanel>
                    </Viewbox>
                </ikw:SimpleStackPanel>
            </ScrollViewer>
            <Viewbox
                Margin="20,20,20,20"
                HorizontalAlignment="Right"
                Visibility="{Binding ElementName=BigViewController, Path=Visibility}">
                <ikw:SimpleStackPanel Height="180" Orientation="Horizontal">
                    <Border
                        x:Name="BtnFullscreen"
                        Width="20"
                        Height="20"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="#FBFBFD"
                        CornerRadius="100"
                        MouseUp="BtnFullscreen_MouseUp">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="3"
                                Direction="0"
                                Opacity="0.1"
                                ShadowDepth="0" />
                        </Border.Effect>
                        <Viewbox Margin="5.5">
                            <ui:SymbolIcon
                                Name="SymbolIconFullscreen"
                                Foreground="Black"
                                Symbol="FullScreen" />
                        </Viewbox>
                    </Border>
                    <Border
                        x:Name="BtnClose"
                        Width="20"
                        Height="20"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="#E32A34"
                        CornerRadius="100"
                        MouseUp="BtnClose_MouseUp">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="3"
                                Direction="0"
                                Opacity="0.1"
                                ShadowDepth="0" />
                        </Border.Effect>
                        <Viewbox Margin="5.5">
                            <ui:SymbolIcon Foreground="White" Symbol="Clear" />
                        </Viewbox>
                    </Border>
                </ikw:SimpleStackPanel>
            </Viewbox>
        </Grid>
    </Border>
</Window>
