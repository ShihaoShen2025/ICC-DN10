<Window
    x:Class="ICC_DN10.YesOrNoNotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:ICC_DN10"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="InkCanvasForClass .NET 10 Edition"
    Width="450"
    Height="160"
    ui:ThemeManager.RequestedTheme="Light"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    FontFamily="Microsoft YaHei UI"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Viewbox
                Height="30"
                Margin="10"
                HorizontalAlignment="Left">
                <ui:SymbolIcon Foreground="{Binding ElementName=Label, Path=Foreground}" Symbol="SlideShow" />
            </Viewbox>
            <TextBlock
                Name="Label"
                Margin="60,0,10,0"
                VerticalAlignment="Center"
                TextWrapping="Wrap" />
            <ikw:SimpleStackPanel
                Grid.Row="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Content="是"
                    Width="100"
                    Margin="0"
                    Click="ButtonYes_Click"
                    FontFamily="Microsoft YaHei UI"
                    Foreground="White">
                    <Button.Resources>
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundKey}" Color="#15803d" />
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundPointerOverKey}" Color="#15803d" />
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundPressedKey}" Color="#166534" />
                    </Button.Resources>
                </Button>
                <Button
                    Content="否"
                    Width="100"
                    Margin="0"
                    Click="ButtonNo_Click"
                    FontFamily="Microsoft YaHei UI"
                    Foreground="#555555" />
            </ikw:SimpleStackPanel>
        </Grid>
    </Grid>
</Window>
